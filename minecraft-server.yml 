name: Minecraft Server

on: [push]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up JDK 17
      uses: actions/setup-java@v2
      with:
        java-version: '17'

    - name: Start Minecraft Server
      run: |
        chmod +x start-server.sh
        ./start-server.sh